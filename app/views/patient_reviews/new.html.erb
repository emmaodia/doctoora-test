<div>

	<h3>Patient review for <%= @user_name %></h3>

	<%= form_for [@user, @review] do |f| %>
		
		<div class="form-group">
			<%= f.text_area :review, :class => "form-control", :placeholder => "What is your assessment of the patient?" %>
		</div>

		<%= f.hidden_field :doctor_id, :value => current_doctor.id %>

		<%= f.submit :class => "btn btn-block btn-success" %>
	<% end %>

</div>