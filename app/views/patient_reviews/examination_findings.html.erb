<div>
	<h2>Patient Review Examination Findings</h2>

	<%= form_for @review, url: submit_examination_findings_path(@review), method: :post do |f| %>

		<div class="form-group">
			<%= f.label :temperature, :class => "control-label" %>
			<%= f.number_field :temperature, :class => "form-control", step: :any %>
		</div>

		<div class="form-group">
			<%= f.label "Pulse Rate (BPM)", :class => "control-label" %>
			<%= f.number_field :pulse_rate, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label "Respiratory Rate (CPM)", :class => "control-label" %>
			<%= f.number_field :respiratory_rate, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :blood_pressure, :class => "control-label" %>
			<%= f.select :blood_pressure, ["Systolic", "Diastolic"], :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :physical_exam, :class => "control-label" %>
			<%= f.text_area :physical_exam, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :mental_exam, :class => "control-label" %>
			<%= f.text_area :mental_exam, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :problems_list, :class => "control-label" %>
			<%= f.text_area :problems_list, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :differential_diagnosis, :class => "control-label" %>
			<%= f.text_field :differential_diagnosis, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :differential_diagnosis_2, :class => "control-label" %>
			<%= f.text_field :differential_diagnosis_2, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :differential_diagnosis_3, :class => "control-label" %>
			<%= f.text_field :differential_diagnosis_3, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :differential_diagnosis_4, :class => "control-label" %>
			<%= f.text_field :differential_diagnosis_4, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :differential_diagnosis_5, :class => "control-label" %>
			<%= f.text_field :differential_diagnosis_5, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :investigations, :class => "control-label" %>
			<%= f.text_field :investigations, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :final_diagnosis, :class => "control-label" %>
			<%= f.text_field :final_diagnosis, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :comment, :class => "control-label" %>
			<%= f.text_area :comment, :class => "form-control"%>
		</div>

		<%= f.submit "Go To Prescriptions", :class => "btn btn-block btn-success" %>
	<% end %>
</div>