<h1> Edit Consultation </h1>

<div class="col-md-4">

	<%= form_for @consultation do |f| %>

		<h2>Book a consultation</h2>

		<div class="form-group">
			<%= f.label "Choose a discipline", :class => "control-label" %>
			<%= f.select :discipline, ["Telephone", "Video", "Text"], :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Choose a service", :class => "control-label" %>
			<%= f.select :service, ["Medical", "Fitness", "Nutritional"], :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Choose a service tool", :class => "control-label" %>
			<%= f.select :tool, ["Private Number", "In-app call", "Skype"], :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Pick a date", :class => "control-label" %>
			<%= f.text_field :date, data:{ provide:'datepicker' } %>
		</div>

		<div class="form-group">
			<%= f.label "Pick a time to start", :class => "control-label" %>
			<%= f.time_select :time, {minute_step: 30, ampm: true}, :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Choose an available professional", :class => "control-label" %>
			<%= f.select :professional, ["Doctor A", "Doctor B", "Doctor C"], :class => "form-control" %>
		</div>

		<%= f.submit "Continue", :class => "btn btn-primary" %>

	<% end %>

</div>