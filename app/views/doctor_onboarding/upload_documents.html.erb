<div class="col-md-6 onboarding-form">

	<h2>Upload Your Documents - PDFs</h2>

	<%= form_for @doctor, url: doctor_onboarding_create_path, method: :post do |f| %>
			
		<div class="form-group">
			<%= f.label "MDCN Annual Practicing Licence", :class => "control-label" %>
			<%= f.file_field :mdcn, :class => "form-control", :required => true %>
		</div>

		<div class="form-group">
			<%= f.label "NYSC Certificate", :class => "control-label" %>
			<%= f.file_field :nysc, :class => "form-control", :required => true %>
		</div>

		<div class="form-group">
			<%= f.label "University Certificate", :class => "control-label" %>
			<%= f.file_field :uni_cert, :class => "form-control", :required => true %>
		</div>

		<div class="form-group">
			<%= f.label "Post NYSC years of experience", :class => "control-label" %>
			<%= f.file_field :post_nysc, :class => "form-control", :required => true %>
		</div>

		<div class="form-group">
			<%= f.label "Proof of Identity", :class => "control-label" %>
			<%= f.file_field :id_proof, :class => "form-control", :required => true %>
		</div>

		<p><i>All fields are required</i></p>

		<%= link_to "Exit", root_path, :class => "btn btn-primary" %>
		<%= f.submit "Continue to complete", :class => "btn btn-primary" %>

	<% end %>

</div>