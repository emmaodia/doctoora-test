                    <li><%= link_to destroy_user_session_path, method: :delete do%>
                        <img src="<%= asset_path( 'icons/logout.png' ) %>" class="sidebar-icon" />
                    <% end %></li>
                    <li><a href="https://www.doctoora.com/contact-us" target="_blank"><img src="<%= asset_path( 'icons/faq.png' ) %>" class="sidebar-icon" /></a></li>
                </div> 
            <% else %>
