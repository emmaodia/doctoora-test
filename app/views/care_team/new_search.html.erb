<div>
	<div style="margin-left: 2em">
		<div style="height: 200px">
			<h2> Doctor Search </h2>
			<%= form_tag(care_path, :method => "post", :class => "navbar-form navbar-left") do %>

				<div class="form-group">
					<%= label_tag 'location' %>
					<%= text_field_tag :location, params[:location], :class => "form-control search-form" %>
				</div>

				<div class="form-group">
					<%= label_tag 'specialization' %>
					<%= text_field_tag :specialization, params[:specialization], :class => "form-control search-form" %>
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-primary">Search</button>
				</div>
			<% end %>
		</div>

		<div>
			<h2> Your Care Team </h2>
			<% if @care_team_doctors.length == 0 %>
				<p>You have no health professionals in your care team. Request a health professional join today by using the form above</p>
			<% end %>
			<% @care_team_doctors.each do |doctor| %>
				<div>
					<%= image_tag doctor.avatar.url(:medium), :class => "profile-image" %>
					<a href="/doctor_profile/<%= doctor.id %>"><h4><%= doctor.title %> <%= doctor.first_name %> <%= doctor.last_name %></h4></a>
					<p><%= doctor.specialization %></p>
					<p><%= doctor.specialty %></p>
				</div>
			<% end %>
		</div>
	</div>
</div>