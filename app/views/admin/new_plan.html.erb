<div>
	<%= link_to "admin home", admin_path, :class => "admin-home" %>
</div>

<h2>Create a new product</h2>

<div>
	<%= form_for @plan, url: admin_plans_new_path do |f| %>
		<div class="form-group">
			<%= f.label "Product Title", :class => "control-label" %>
			<%= f.text_field :title, :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Product Description", :class => "control-label" %>
			<%= f.text_area :description, :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Product Price", :class => "control-label" %>
			<%= f.number_field :price, :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Product Type", :class => "control-label" %>
			<%= f.select :category, ["Patient", "Doctor"], :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Product Category", :class => "control-label" %>
			<%= f.select :product_category, @categories, :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Image", :class => "control-label" %>
			<%= f.file_field :image, :class => "form-control" %>
		</div>
		
		<%= f.submit "Submit", :class => "btn btn-primary" %>
	<% end %>
</div>

<style>
  #activity-wrapper {
    display: none;
  }
</style>