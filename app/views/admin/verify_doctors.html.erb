<h1>Verify Doctors</h1>

<div>
	<% @doctors.each do |doctor| %>
		<div class="panel panel-default">
			<div class="panel-body">
				<%= link_to verify_doctor_path(doctor) do %>
					<%= doctor.first_name %> <%= doctor.last_name %>
					<%= doctor.specialization %>
					<%= doctor.specialty %>
					<%= doctor.town %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>