<p>Activate admin by entering the Doctoora admin password below</p>

<form class="form-inline" action="activate" method="post">
	<div class="form-group">
		<input type="password" placeholder="Activation Password" name="password" class="form-control"/>
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
		<br>
		<br>
		<button type="submit" class="btn btn-block btn-primary">Submit</button>
	</div>
</form>

<style>
  #activity-wrapper {
    display: none;
  }
</style>