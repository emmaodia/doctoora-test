<div>
	<%= link_to "admin home", admin_path, :class => "admin-home" %>
</div>

<h2> All Doctoora Health Professionals (<%= @doctors.count %>)</h2>

<div class="row">
	<div class="panel panel-default">
		<div class="panel-body">
			<% @doctors.each do |doctor| %>
				<div class="admin-doctor col-md-6">
					<h4><%= doctor.first_name %> <%= doctor.last_name %></h4>
					<p><%= doctor.email %></p>
					<p>Joined: <%= doctor.created_at %></p>
					<p><%= link_to "view professional profile", doctor_profile_path(doctor) %></p>
					<p><%= link_to "delete doctor account", doctor_profile_path(doctor), method: :delete, data: { confirm: "Are you sure you want to delete this doctor's account?" } %></p>
				</div>
			<% end %>
		</div>
	</div>
</div>

<style>
  #activity-wrapper {
    display: none;
  }
</style>