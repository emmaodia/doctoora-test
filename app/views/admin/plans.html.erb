<h2>Marketplace Items</h2>

<%= link_to "add product", new_plan_path %>

<div class="row">
	<div class="panel panel-default">
		<% @plans.each do |plan| %>
			<div class="panel-body col-md-4">
				<img src=<%= plan.image.url(:medium) %>/>
				<h4><%= plan.title %></h4>
				<h5><%= plan.category %></h5>
				<p><%= plan.description %></p>
				<p>â‚¦<%= plan.price %></p>
				<br>
				<p><%= link_to "edit", edit_plan_path(plan) %></p>
				<p><%= link_to "delete", plan_path(plan), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }  %></p>
			</div>
		<% end %>
	</div>
</div>

