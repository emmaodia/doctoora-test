<div>
	<%= link_to "admin home", admin_path %>
</div>

<h2> All Doctoora Patients (<%= @patients.count %>)</h2>

<div class="row">
	<div class="panel panel-default">
		<div class="panel-body col-md-4">
			<% @patients.each do |patient| %>
				<div class="admin-patient">
					<h4><%= patient.first_name %> <%= patient.last_name %></h4>
					<p><%= patient.email %></p>
					<p>Joined: <%= patient.created_at %></p>
					<p><%= link_to "view patient profile", profile_path(patient) %></p>
					<p><%= link_to "delete patient account", profile_path(patient), method: :delete, data: { confirm: "Are you sure you want to delete this user's account?" } %></p>
				</div>
			<% end %>
		</div>
	</div>
</div>

<style>
  #activity-wrapper {
    display: none;
  }
</style>