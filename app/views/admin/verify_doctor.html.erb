<h2><%= @doctor.email %></h2>

<div class="row">
	<div class="col-md-6">
		<h3>MDCN</h3>
		<iframe src="<%= @doctor.mdcn.url %>" width="450px" height="800px"></iframe>
	</div>

	<div class="col-md-6">
		<h3>NYSC Certificate</h3>
		<iframe src="<%= @doctor.nysc.url %>" width="450px" height="800px"></iframe>
	</div>

	<div class="col-md-6">
		<h3>University Certificate</h3>
		<iframe src="<%= @doctor.uni_cert.url %>" width="450px" height="800px"></iframe>
	</div>

	<div class="col-md-6">
		<h3>Post NYSC Certificate</h3>
		<iframe src="<%= @doctor.post_nysc.url %>" width="450px" height="800px"></iframe>
	</div>

	<div class="col-md-6">
		<h3>Proof of ID</h3>
		<iframe src="<%= @doctor.id_proof.url %>" width="450px" height="800px"></iframe>
	</div>
</div>

<%= link_to "verify", verify_path, method: :post %>