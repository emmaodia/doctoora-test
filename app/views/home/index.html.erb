<% if user_signed_in? %>
	<div class="col-md-8">
		<div>
			<h4>Trending in the health communities you follow...</h4>
			<div style="width: 100%; padding-bottom: 25%" class="slider" data-simple-slider>
				<img src="https://unsplash.it/640/160?random=1"/>
				<img src="https://unsplash.it/640/160?random=2"/>
				<img src="https://unsplash.it/640/160?random=3"/>
			</div>
		</div>

		<div class="form">
			<form class="search-form">
		        <div class="form-group">
		          <input type="text" class="form-control" placeholder="Tell us your symptoms">
		        </div>
		        <button type="submit" class="btn btn-primary">Talk to a doctor >> </button>
		    </form>
		</div>
	</div>
	
	<script>
		simpleslider.getSlider();
	</script>
<% elsif doctor_signed_in? %>
	<% if !current_doctor.verified %>
		<div>
			<p>Your application is being verified and you will be notified soon.</p>

			<p><%= link_to "view profile", doctor_profile_path(current_doctor) %></p>
			<p><%= link_to "edit certificates", doctor_onboarding_new_upload_documents_path %></p>
		</div>
	<% else %>
		<div class="col-md-8">
			<div>
				<h4>Your Medical Feed</h4>
				<div style="width: 100%; padding-bottom: 25%" class="slider" data-simple-slider>
					<img src="https://unsplash.it/640/160?random=1"/>
					<img src="https://unsplash.it/640/160?random=2"/>
					<img src="https://unsplash.it/640/160?random=3"/>
				</div>
			</div>
		</div>
	<% end %>
<% elsif admin_signed_in? %>
	<div>
		<h1>Welcome Admin</h1>

		<p><%= link_to "Verify Doctors", verify_doctors_path %></p>
		<p><%= link_to "Plans", admin_plans_path %></p>

		<p><%= link_to "Admin Sign Out", destroy_admin_session_path, method: :delete %></p>
	</div>
<% else %>
	<div class="col-md-4">
		<div>
			<img src="/logo.png" id="home-logo"/>
		</div>
		<%= link_to "Log in as a patient", new_user_session_path, :class => "access-link" %><br />
		<%= link_to "Log in as a doctor", new_doctor_session_path, :class => "access-link" %><br />
		<%= link_to "Sign up as a patient", new_user_registration_path, :class => "access-link" %><br />
		<%= link_to "Sign up as a doctor", new_doctor_registration_path, :class => "access-link" %><br />
		<br />
		<br />
		<br />
		<%= link_to "Admin sign in", new_admin_session_path %><br />
		<%= link_to "Admin sign up", new_admin_registration_path %><br />
	</div>
<% end %>