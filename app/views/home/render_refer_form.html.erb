<h2>Refer a friend or colleague to Doctoora today</h2>

<div class="col-md-4">

	<form action="refer" method="post">

		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

		<div class="form-group">
			<label class="control-label">Referee's email address</label>
			<input type="email" name="email" class="form-control" style="text-align: center" required />

			<label class="control-label">Referee's name</label>
			<input type="text" name="name" class="form-control" style="text-align: center" required />
		</div>

		<input type="submit" class="btn btn-primary" />

	</form>

</div>
