<%= render 'shared/nav' %>

<div class="col-md-6 col-md-offset-3">

	<h2>Let's talk a little bit more about your health</h2>

	<%= form_for @user, url: onboarding_create_path, method: :post do |f| %>
			
		<div class="form-group">
			<%= f.text_field :conditions, :class => "form-control", :placeholder => "Do you have any pre-existing conditions?"%>
		</div>

		<h3>Lifestyle</h3>

		<div class="form-group">
			<%= f.select :dietary_restrictions, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.select :alcohol_consumption, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.select :recreational_drug, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.select :tobacco, :class => "form-control"%>
		</div>

		<div class="form-group">
			<%= f.select :sexual_activity, :class => "form-control"%>
		</div>

		<%= link_to "Skip", root_path %>
		<%= link_to "Back", url_for(:back) %>

		<%= f.submit "Continue", :class => "btn btn-default" %>

	<% end %>

</div>