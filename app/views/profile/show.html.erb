<%= render 'shared/sidebar' %>
<%= render 'shared/nav' %>

<div class="col-md-6 profile">

	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>Me</th>
					<th><%= link_to "edit", edit_profile_path(current_user.id) %></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Name</td>
					<td><%= @user.first_name %> <%= @user.last_name %></td>
				</tr>
				<tr>
					<td>Gender</td>
					<td><%= @user.gender %></td>
				</tr>
				<tr>
					<td>Date of birth</td>
					<td><%= @user.dob %></td>
				</tr>
				<tr>
					<td>Ethnicity</td>
					<td><%= @user.ethnicity %></td>
				</tr>
				<tr>
					<td>Height</td>
					<td><%= @user.height %></td>
				</tr>
				<tr>
					<td>Weight</td>
					<td><%= @user.weight %></td>
				</tr>
				<tr>
					<td>BMI</td>
					<td><%= @user.bmi.round(2) %></td>
				</tr>
			</tbody>
		</table>
	</div>

	<div>
		<h3>Existing Conditions</h3>
		<p>Conditions that affect or have affected more than
		one person in your family</p>
		<p><%= @user.conditions if @user.conditions%></p>
		<%= link_to "Add", edit_profile_path(current_user.id), :class => "btn btn-primary" %>

		<h3>Long lasting Conditions</h3>
		<%= link_to "Add", edit_profile_path(current_user.id), :class => "btn btn-primary" %>
	</div>

	<div>
		<h3>Vaccination</h3>
		<p>To the best of your knowledge what vaccinations have you had, from childhood till now?</p>
		<p><%= @user.vaccinations if @user.vaccinations %></p>
		<%= link_to "Add", edit_profile_path(current_user.id), :class => "btn btn-primary" %>
	</div>

	<div>
		<h3>Allergies</h3>
		<%= link_to "Add", edit_profile_path(current_user.id), :class => "btn btn-primary" %>
	</div>

	<div>
		<h3>Medication</h3>
		<%= link_to "Add", edit_profile_path(current_user.id), :class => "btn btn-primary" %>
	</div>

</div>