<h1> Your Consultations </h1>

<div>
	<%= month_calendar events: @consultations do |date, consultations| %>
	  <%= date %>

	  <% consultations.each do |consultation| %>
	    <div>
	    	<button class="link-button" value="<%= consultation.id %>"><%= get_patient_name(consultation.user_id) %></button>
	    </div>

	    <div id="consultation-<%= consultation.id%>" class="patient-records">
	    	<h5><%= get_patient_name(consultation.user_id) %></h5>
			<p><%= consultation.date_and_time.strftime("%m/%d/%y at %l:%M %p") %></p>
			<p><%= consultation.discipline %></p>
			<p><%= consultation.service %>
			<% if consultation.tool == "In-app call" %>
				<%= link_to "Start Consultation", consultation_path(consultation, :user_id => consultation.user_id)%>
			<% end %>
			</p>
		</div>
	  <% end %>
	<% end %>

</div>

<script>
	var consultationID;
	$('.link-button').click(function(){
		consultationID = $(this).val();
		$('#consultation-'+consultationID).toggle();
	})
</script>